extends ../layout.jade
block body
	h2(class="pacifico center-align") Noticias para los Alumnos
	div(class="row container")
		each noticia, i in noticestudent
			div(class="col l6 m6 s12")
				div(class="card blue-grey darken-1 small")
					div(class="card-image")
						img(src="#{ noticia.image }")
						span(class="card-title truncate black-text green")= noticia.header
					div(class="card-content")
						p(class="truncate")= noticia.descriptionstu
						div(class="divider")
						a(href="#!" class="right") Leer mas