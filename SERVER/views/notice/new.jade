extends ../layout.jade
block body
	h1(class="pacifico center-align") Nueva Noticia
	div(class="container")
		form(class="col s12" method="post" action="/noticias")
			div(class="input-field col l8 s12 m8 center")
				i(class="material-icons left") label
				h6(class="left") Titulo de la noticia
				input(placeholder="Introduzca el Titulo de la noticia" name="title" id="title" type="text" class="validate")
			div(class="input-field col s12 l12 m12")
				i(class="material-icons left") description
				h6(class="left") Cuerpo de la noticia
				textarea(placeholder="Introduzca la informacion aqui" name="description" id="description" type="text" class="validate m-top")
			div(class="input-field col l8 s12 m8 center")
				i(class="material-icons left") lock
				h6(class="left") Contraseña
				input(placeholder="Contraseña (obligatoria)" name="password" id="password" type="password" class="validate")
			div(class="input-field col s12 l12 m12")
				button(type="submit waves-effect waves-light" class="btn") Enviar
					i(class="material-icons right") send