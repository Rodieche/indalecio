extends ../layout.jade
block body
	h1(class="pacifico center-align") Nueva Noticia
	div(class="container")
		form(class="col s12" method="post" action="/superadmin")
			div(class="input-field col l8 s12 m8 center")
				label Titulo de la noticia
				input(placeholder="Introduzca el Titulo de la noticia" id="title" type="text" class="validate")
			div(class="input-field col s12 l12 m12")
				label Cuerpo de la noticia
				textarea(placeholder="Introduzca la informacion aqui" id="description" type="text" class="validate")
			div(class="input-field col s12 l12 m12")
				button(type="submit waves-effect waves-light" class="btn") Enviar
					i(class="material-icons right") send