extends ./layout.jade
block body

	//CONTENT

	div(class="parallax-container m-top-little")
		div(class="parallax")
			img(src="img/escuela2.png")

	div(class="section")
		div(class="row container center-align")
			h1(class="pacifico") Escuela Dr. Indalecio Gómez
			h3 Educación, Inclusion y Compromiso
			p(class="pacifico")
				a(href="alumnos" class="btn tooltipped white-text green z-depth-5" data-position="bottom" data-delay="50" data-tooltip="Informacion util para el Alumno") Alumnos
				a(href="noticias" class="btn tooltipped white-text green m-right m-left z-depth-5" data-position="bottom" data-delay="50" data-tooltip="Noticias de la Institucion") Noticias
				a(href="contacto" class="btn tooltipped white-text green z-depth-5" data-position="bottom" data-delay="50" data-tooltip="Informacion de contacto") Contacto

	div(class="parallax-container")
		div(class="parallax")
			img(src="img/school_draw.jpg")

	div(class="container m-buttom")
		h3(class="pacifico center-align") Consultas
		form(class="col s12 l12 m12" method="post" action="/contact")
			div(class="row")
				div(class="input-field col l6 s12 m6 center")
					i(class="material-icons left") account_circle
					h6(class="left") Nombre
					input(placeholder="Juan Lopez" name="name" id="name" type="text" class="validate")
				div(class="input-field col l6 s12 m6 center")
					i(class="material-icons left") email
					h6(class="left") Mail
					input(placeholder="ejemplo@sudominio.com" name="mail" id="mail" type="email" class="validate")
				div(class="input-field col l12 s12 m12 center")
					i(class="material-icons left") subject
					h6(class="left") Asunto
					input(placeholder="Motivo de su consulta" name="subject" id="subject" type="text")
			div(class="input-field col s12 l12 m12")
				i(class="material-icons left") description
				h6(class="left") Escriba su texto
				textarea(placeholder="Cuerpo del mensaje" name="mail_body" id="mail_body" type="textarea" class="validate m-top" style="height:150px;")
			div(class="input-field col s12 l12 m12")
				button(type="submit waves-effect waves-light" class="btn blue") Enviar
					i(class="material-icons right") send

	//	END CONTENT